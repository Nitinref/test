{
  "name": "@lingoguard/cli",
  "version": "1.0.0",
  "description": "LingoGuard CLI - AST-based i18n quality checker",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "lingoguard": "packages/cli/dist/cli.js"
  },
  "files": [
    "packages/cli/dist",
    "postinstall.js"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "clean": "rm -rf dist",
    "postinstall": "node postinstall.js",
    "i18n:check": "lingoguard scan",
    "i18n:fix": "lingoguard fix --severity high",
    "i18n:fix:all": "lingoguard fix",
    "i18n:preview": "lingoguard fix --dry-run"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@babel/parser": "^7.23.6",
    "@babel/traverse": "^7.23.6",
    "@babel/types": "^7.23.6",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/babel__traverse": "^7.20.5",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.9.3"
  }
}